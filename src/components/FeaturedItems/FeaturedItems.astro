---
// 路线图标签组 多个标签
import FeaturedItem, { type FeaturedItemType } from "./FeaturedItem.astro";

export interface Props {
  featuredItems: FeaturedItemType[];
  heading: string;
  // allowBookmark?: boolean;   //可标记
}

// const { featuredItems, heading, allowBookmark = true } = Astro.props;
const { featuredItems, heading } = Astro.props;
---

<div class="container py-8">
  <div class="mb-5">
    <h2 class="text-xl font-bold text-gray-900 sm:text-2xl">{heading}</h2>
  </div>

  <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 md:grid-cols-3">
    {
      featuredItems.map((featuredItem) => (
        <a
          href={featuredItem.url}
          class="group flex items-center rounded-lg border border-gray-200 bg-gray-50 p-3 text-[15px] font-medium text-gray-700 transition-all hover:border-gray-300 hover:bg-gray-100"
        >
          {featuredItem.text}
        </a>
      ))
    }
  </div>
</div>
