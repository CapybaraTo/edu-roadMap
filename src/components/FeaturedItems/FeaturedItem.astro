---
// 路线图标签 单个
// import { MarkFavorite } from "./MarkFavorite"; // 标记收藏
export interface FeaturedItemType {
  url: string;
  text: string;
  // allowBookmark?: boolean;    、
}

export interface Props extends FeaturedItemType {}

// const { text, url, allowBookmark = true } = Astro.props;
const { text, url } = Astro.props;
---

<a href={url} class="relative block min-w-[120px] rounded-lg px-5 py-3 text-center transition-all duration-200 hover:bg-slate-800/50">
  <span class="relative z-20 font-medium text-slate-300 transition-colors duration-200 hover:text-white">
    {text}
  </span>

  <!-- {
    allowBookmark && (
      <MarkFavorite
        resourceId={url.split("/").pop()!}
        resourceType={
          url.includes("best-practices") ? "best-practice" : "roadmap"
        }
        client:only="react"
      />
    )
  } -->

  <!-- 显示进度条 -->
  <span
    data-progress
    class="absolute bottom-0 left-0 right-0 top-0 z-10 w-0 rounded-lg bg-gradient-to-r from-blue-900/20 to-purple-900/20 transition-[width] duration-300"
  ></span>
</a>
